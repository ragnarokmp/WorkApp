<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    tools:context="it.mobileprogramming.ragnarok.workapp.StartExerciseActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/circular_progress_bar"
        android:layout_toLeftOf="@+id/circular_progress_bar"
        android:layout_toStartOf="@+id/circular_progress_bar"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetition"
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
            android:textColor="@color/primary_dark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 "
                android:id="@+id/textView3"
                style="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 20"
                android:id="@+id/textView2"
                style="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <it.mobileprogramming.ragnarok.workapp.util.CircularProgressBar
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/circular_progress_bar"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        auto:diameter="100dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toRightOf="@+id/circular_progress_bar"
        android:layout_toEndOf="@+id/circular_progress_bar"
        android:id="@+id/linearLayout2"
        android:gravity="center_horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetition"
            android:id="@+id/textView4"
            android:textColor="@color/primary_dark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 "
                android:id="@+id/textView5"
                android:textColor="@android:color/white" />

            <TextView
                style="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 20"
                android:id="@+id/textView6"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:text="00:00:123"
        android:id="@+id/textView7"
        android:layout_above="@+id/circular_progress_bar"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_stop"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_action_pause"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />


</RelativeLayout>
