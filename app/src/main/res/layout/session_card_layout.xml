<?xml version="1.0" encoding="utf-8"?>

<it.mobileprogramming.ragnarok.workapp.cards.SessionCardItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    style="@style/MainLayout"
    android:layout_marginEnd="@dimen/small_padding"
    android:layout_marginStart="@dimen/small_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/MainCardView"
        auto:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <it.mobileprogramming.ragnarok.workapp.AspectRatioImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/image_view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                auto:aspectRatioEnabled="true"
                auto:aspectRatio="0.5625"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_view"
                android:background="@drawable/shadow">

                <TextView
                    style="@style/SessionCardTitle"
                    android:id="@+id/title_text_view"
                    tools:text="Tomorrow, 25 june"

                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/SessionCardSubTitle"
                    android:id="@+id/subtitle_text_view"
                    tools:text="Duration: 25 m\nExercises: 10"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_text_view"
                android:textColor="@color/description_color"
                android:padding="@dimen/big_padding"
                android:textSize="@dimen/description_size"
                android:layout_below="@+id/image_view"
                tools:text="We will work on: glutes, ABS, hamstrings with:\nBARBELL SQUAT\nWALKING DUMBBELL LUNGE\nROMANIAN DEADLIFT\nLYING LEG CURL
                "/>

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_grey"
                android:layout_below="@+id/description_text_view"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_text_button"
                android:layout_below="@+id/description_text_view"
                android:layout_marginTop="@dimen/small_padding"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginLeft="@dimen/small_padding"
                android:padding="@dimen/small_padding"
                tools:text="LEFT BUTTON"
                style="@style/LeftButtonBaseStyle"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_text_button"
                android:layout_toRightOf="@+id/left_text_button"
                android:layout_alignBottom="@+id/left_text_button"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginLeft="@dimen/small_padding"
                android:padding="@dimen/small_padding"
                tools:text="RIGHT BUTTON"
                style="@style/RightButtonBaseStyle"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</it.mobileprogramming.ragnarok.workapp.cards.SessionCardItemView>