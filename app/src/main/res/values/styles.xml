<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="WorkApp.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>

        <!-- For Preferences
        <item name="mp_colorAccent">@color/primary_dark</item> -->

    </style>

    <style name="WorkApp" parent="WorkApp.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="WorkApp.FullScreen" parent="WorkApp">
        <!-- For Full Screen -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="WorkApp.Launcher">
        <!-- For Splash Screen following this https://plus.google.com/+AndroidDevelopers/posts/Z1Wwainpjhd -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>