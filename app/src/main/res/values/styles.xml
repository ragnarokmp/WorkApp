<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="WorkApp.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="WorkApp" parent="WorkApp.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="WorkApp.FullScreen" parent="WorkApp">
        <!-- For Full Screen -->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="WorkApp.Launcher">
        <!-- For Splash Screen following this https://plus.google.com/+AndroidDevelopers/posts/Z1Wwainpjhd -->
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>